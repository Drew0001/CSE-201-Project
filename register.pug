extends registerlayout

block content
    .container    
        if errors
                each error in errors
                    .alert.alert-danger= error
        form(action='/users/register', method='post', name='submitform')
            h2 Create a manager
            p Basketball Manager
            .form-group
                label Username
                input.form-control(type='text', name='username', required='required')
            .form-group
                label Email Address
                input.form-control(type='email', name='email', required='required')
            .form-group
                label Password
                input.form-control(type='password', name='password', required='required')
            .form-group
                label Confirm Password
                input.form-control(type='password', name='confirm_password', required='required')
            button.btn.btn-outline-danger.btn-lg(type='submit') Sign Up
        .text-center
            | Already have an account? 
            a(href='/loginpage') Login here

