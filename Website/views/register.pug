extends registerlayout

block content
    .container    
        if errors
                each error in errors
                    .alert.alert-danger= error
        form(action='/users/register', method='post', name='submitform')
            h2 Create a account
            p TayLog Account
            .form-group
                label Username
                input.form-control(type='text', name='username', required='required')
            .form-group
                label Favorite Team
                select#favname(name='favteam')
                    option(value='Illinois Fighting Illini') Illinois Fighting Illini
                    option(value='Indiana Hoosiers') Indiana Hoosiers
                    option(value='Iowa Hawkeyes') Iowa Hawkeyes
                    option(value='Maryland Terrapins') Maryland Terrapins
                    option(value='Michigan Wolverines') Michigan Wolverines
                    option(value='Michigan State Spartans') Michigan State Spartans
                    option(value='Minnesota Golden Gophers') Minnesota Golden Gophers
                    option(value='Nebraska Cornhuskers') Nebraska Cornhuskers
                    option(value='Northwestern Wildcats') Northwestern Wildcats
                    option(value='Ohio State Buckeyes') Ohio State Buckeyes
                    option(value='Penn State Nittany Lions') Penn State Nittany Lions
                    option(value='Purdue Boilermakers') Purdue Boilermakers
                    option(value='Rutgers Scarlet Knights') Rutgers Scarlet Knights
                    option(value='Wisconsin Badgers') Wisconsin Badgers
                    
            .form-group
                label Password
                input.form-control(type='password', name='password', required='required')
            .form-group
                label Confirm Password
                input.form-control(type='password', name='confirm_password', required='required')
            button.btn.btn-outline-danger.btn-lg(type='submit') Sign Up
        .text-center
            | Already have an account? 
            a(href='/loginpage') Login here

